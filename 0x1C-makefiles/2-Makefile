# Compiler to be used
CC := gcc

# Source files
SRC := main.c holberton.c

# Object files (automatically generated from source files)
OBJ := $(SRC:%.c=%.o)

# Name of the executable
NAME := holberton

# Rule for building the executable
all: $(NAME)

# Rule for linking the object files and generating the executable
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Rule for compiling individual source files into object files
main.o: main.c m.h
	$(CC) -c -o $@ $<

holberton.o: holberton.c m.h
	$(CC) -c -o $@ $<

# Clean rule to remove the executable and object files
clean:
	rm -f $(NAME) $(OBJ)
