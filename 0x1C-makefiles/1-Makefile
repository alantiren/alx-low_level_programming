# Compiler to be used
CC := gcc

# Source files
SRC := main.c holberton.c

# Name of the executable
EXECUTABLE := holberton

# Rule for building the executable
all: $(EXECUTABLE)

# Rule for linking the object files and generating the executable
$(EXECUTABLE): $(SRC)
	$(CC) $(SRC) -o $(EXECUTABLE)

# Clean rule to remove the executable
clean:
	rm -f $(EXECUTABLE)
