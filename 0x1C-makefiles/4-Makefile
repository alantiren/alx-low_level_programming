# Compiler to be used
CC = gcc

# Source files
SRC = holberton.c main.c

# Object files (automatically generated from source files)
OBJ = $(SRC:%.c=%.o)

# Name of the executable
NAME = holberton

# Program to delete files
RM = rm -f

# Your favorite compiler flags
CFLAGS = -Wall -Werror -Wextra -pedantic

# Rule for compiling individual source files into object files
%.o: %.c m.h
	$(CC) -c -o $@ $<

# Rule to build the executable
all: $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

# Rule to clean up Emacs and Vim temporary files and the executable
clean:
	$(RM) *~ $(NAME)

# Rule to remove object files
oclean:
	$(RM) $(OBJ)

# Rule to clean up Emacs and Vim temporary files, the executable, and object files
fclean: clean oclean

# Rule to force recompilation of all source files
re: oclean all
