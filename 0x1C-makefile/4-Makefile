# Name of the executable
NAME := school

# Compiler to be used
CC := gcc

# Compiler flags
CFLAGS := -Wall -Werror -Wextra -pedantic

# Source files
SRC := main.c school.c

# Object files (automatically generated from source files)
OBJ := $(SRC:.c=.o)

# Utility for deleting files
RM := rm -f

# Rule for building the executable
all: $(NAME)

# Rule for linking the object files and generating the executable
$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

# Rule for compiling individual source files into object files
%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

# Rule to remove Emacs and Vim temporary files and the executable
clean:
	$(RM) *~ $(NAME)
# Rule to remove object files
oclean:
	$(RM) $(OBJ)
# Rule to remove Emacs and Vim temporary files, the executable, and object files
fclean: clean oclean
# Rule to force recompilation of all source files
re: fclean all
